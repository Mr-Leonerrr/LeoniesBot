{
    "root": true,
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "requireConfigFile": false,
        "babelOptions": {
            "babelrc": false,
            "configFile": false,
            "presets": ["@babel/preset-env"]
        }
    },
    "env": {
        "node": true,
        "es6": true
    },
    "plugins": ["@babel"],
    "extends": ["eslint:recommended"],
    "rules": {
        "no-unused-vars": "off",
        "quotes": ["error", "single"],
        "semi": "error",
        "no-trailing-spaces": "error",
        "no-var": "error",
        "eqeqeq": "error",
        "linebreak-style": ["warn", "unix"]
    }
}
